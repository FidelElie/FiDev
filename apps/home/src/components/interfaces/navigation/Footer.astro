---
import { AppManifest } from "@/configs";

import { generateSpotifyURI } from "@/libraries/utilities";

import { Container } from "@/components/core";
import { BackToTopButton } from "@/components/interfaces/navigation/_Footer/BackToTopButton";
---

<footer class="py-3 border-t border-slate-200 flex flex-col">
	<Container class="flex flex-col items-start justify-between gap-4 md:flex-row">
		<BackToTopButton client:visible/>
		<div class="flex flex-wrap gap-5">
			<div class="">
				<p class="font-heading text-lg mb-2">Music</p>
				<ul class="space-y-1">
					<li>
						<a href="/music" class="underline decoration-blue-500 underline-offset-2">
							projects
						</a>
					</li>
					<li>
						<a href="/music/artists" class="underline decoration-blue-500 underline-offset-2">
							artists
						</a>
					</li>
					<li>
						<a href="/music/genres" class="underline decoration-blue-500 underline-offset-2">
							genres
						</a>
					</li>
				</ul>
			</div>
		</div>
	</Container>
	<hr class="mt-10 mb-3 border-t border-slate-200"/>
	<Container class="flex py-2 justify-between">
		<p class="text-sm text-slate-500">
			Copyright&copy; Fidel Pierre Elie {(new Date()).getFullYear()} - All Rights Reserved
		</p>
		<ul class="flex gap-2.5">
			<li>
				<a
					href={AppManifest.links.socials.INSTAGRAM}
					class="underline decoration-2 underline-offset-4 decoration-pink-500 text-sm text-slate-800"
					target="_blank"
				>
					Instagram
				</a>
			</li>
			<li>
				<a
					href={AppManifest.links.socials.LINKEDIN}
					class="underline decoration-2 underline-offset-4 decoration-sky-600 text-sm text-slate-800"
					target="_blank"
				>
					Linkedin
				</a>
			</li>
			<li>
				<a
					href={generateSpotifyURI(AppManifest.links.socials.SPOTIFY)}
					class="underline decoration-2 underline-offset-4 decoration-green-600 text-sm text-slate-800"
				>
					Spotify
				</a>
			</li>
		</ul>
	</Container>
</footer>
